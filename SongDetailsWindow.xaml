<Window x:Class="Telhai.DotNet.PlayerProject.SongDetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Telhai.DotNet.PlayerProject"
        mc:Ignorable="d"
        Title="Edit Track Info" Height="420" Width="350"
        WindowStartupLocation="CenterOwner" 
        Background="#1E1E2C" ResizeMode="NoResize">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Edit Details" FontSize="22" FontWeight="Light" Foreground="White" 
                   HorizontalAlignment="Center" Margin="0,0,0,15"/>

        <StackPanel Grid.Row="1" VerticalAlignment="Center">
            <Label Content="Song Title" Foreground="#AAAAAA" FontSize="13"/>
            <Border Background="#2A2A3A" CornerRadius="5" Padding="5" Margin="0,0,0,12">
                <TextBox x:Name="txtTitle" Background="Transparent" BorderThickness="0" Foreground="White" FontSize="15"/>
            </Border>

            <Label Content="Artist Name" Foreground="#AAAAAA" FontSize="13"/>
            <Border Background="#2A2A3A" CornerRadius="5" Padding="5" Margin="0,0,0,12">
                <TextBox x:Name="txtArtist" Background="Transparent" BorderThickness="0" Foreground="White" FontSize="15"/>
            </Border>

            <Label Content="Album" Foreground="#AAAAAA" FontSize="13"/>
            <Border Background="#2A2A3A" CornerRadius="5" Padding="5" Margin="0,0,0,10">
                <TextBox x:Name="txtAlbum" Background="Transparent" BorderThickness="0" Foreground="White" FontSize="15"/>
            </Border>
        </StackPanel>

        <Grid Grid.Row="2" Margin="0,15,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Button x:Name="btnCancel" Grid.Column="0" Content="Discard" Height="38" Margin="0,0,5,0" 
                    Background="#3E3E4E" Foreground="#DDDDDD" BorderThickness="0" Click="BtnCancel_Click">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="5"/>
                    </Style>
                </Button.Resources>
            </Button>

            <Button x:Name="btnSave" Grid.Column="1" Content="Save Changes" Height="38" Margin="5,0,0,0" 
                    Background="#FF007ACC" Foreground="White" FontWeight="Bold" BorderThickness="0" Click="BtnSave_Click">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="5"/>
                    </Style>
                </Button.Resources>
            </Button>
        </Grid>
    </Grid>
</Window>