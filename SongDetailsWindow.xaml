<Window x:Class="Telhai.DotNet.PlayerProject.SongDetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Edit Song" Height="450" Width="380" Background="#1E1E2C">
    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="Edit Details" Foreground="White" FontSize="20" Margin="0,0,0,10"/>

            <Label Content="Title:" Foreground="Gray"/>
            <TextBox Text="{Binding SongTitle}" Margin="0,0,0,10"/>

            <Label Content="Images:" Foreground="Gray"/>
            <ListBox x:Name="lstImages" ItemsSource="{Binding ImageList}" Height="80"/>

            <UniformGrid Columns="2" Margin="0,5">
                <Button Content="Add File" Click="BtnAddFile_Click"/>
                <Button Content="Remove" Click="BtnRemove_Click"/>
            </UniformGrid>


            <UniformGrid Columns="2" Margin="0,20,0,0">
                <Button Content="Cancel" Click="BtnCancel_Click" Margin="0,0,5,0"/>
                <Button Content="Save" Click="BtnSave_Click" Margin="5,0,0,0" Background="#007ACC" Foreground="White"/>
            </UniformGrid>
        </StackPanel>
    </Grid>
</Window>